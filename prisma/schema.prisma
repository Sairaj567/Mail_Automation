generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mail {
  id         Int      @id @default(autoincrement())
  from       String
  to         String
  subject    String
  body       String
  receivedAt DateTime @default(now())
  category   String
  status     String   @default("new")
  createdAt  DateTime @default(now())
  updatedAt  DateTime
}
