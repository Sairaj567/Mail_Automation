<div class="card">
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Profile Completion</th>
                    <th>Skills</th>
                    <th>Joined On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (students && students.length > 0) { %>
                    <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.name %></td>
                            <td><%= student.email %></td>
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: <%= student.studentProfile?.profileCompletion || 0 %>%;"></div>
                                </div>
                                <span class="badge bg-light"><%= student.studentProfile?.profileCompletion || 0 %>%</span>
                            </td>
                            <td>
                                <% if (student.studentProfile && student.studentProfile.skills && student.studentProfile.skills.length > 0) { %>
                                    <% student.studentProfile.skills.slice(0, 3).forEach(skill => { %>
                                        <span class="badge bg-secondary"><%= skill %></span>
                                    <% }) %>
                                    <% if (student.studentProfile.skills.length > 3) { %>
                                        <span class="badge bg-info">+<%= student.studentProfile.skills.length - 3 %> more</span>
                                    <% } %>
                                <% } else { %>
                                    <span class="badge bg-warning">No skills</span>
                                <% } %>
                            </td>
                            <td><%= new Date(student.createdAt).toLocaleDateString() %></td>
                            <td>
                                <a href="#" class="btn btn-sm btn-info disabled" title="View Profile">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="#" class="btn btn-sm btn-danger disabled" title="Delete User">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">No students found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
