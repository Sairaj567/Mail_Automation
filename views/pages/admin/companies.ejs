<div class="card">
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>Contact Email</th>
                    <th>Jobs Posted</th>
                    <th>Joined On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (companies && companies.length > 0) { %>
                    <% companies.forEach(company => { %>
                        <tr>
                            <td><%= company.companyProfile?.companyName || company.name %></td>
                            <td><%= company.email %></td>
                            <td><span class="badge bg-primary"><%= company.companyProfile?.jobsPosted?.length || 0 %></span></td>
                            <td><%= new Date(company.createdAt).toLocaleDateString() %></td>
                            <td>
                                <a href="#" class="btn btn-sm btn-info disabled" title="View Profile">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="#" class="btn btn-sm btn-danger disabled" title="Delete User">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">No companies found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
